<resources>

    <!-- Base application theme. -->
    <style name="BodyFitTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorDivider</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="MainTitleTextView">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="MainTitleWhiteTextView">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/colorIcons</item>
    </style>

    <style name="MainEditText">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/colorIcons</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="MainMiddleTextView">
        <item name="android:textSize">@dimen/middle_text_size</item>
        <item name="android:textColor">@color/colorIcons</item>
    </style>

    <style name="MainMiddleSelectedTextView">
        <item name="android:textSize">@dimen/middle_text_size</item>
        <item name="android:textColor">@color/text_selected</item>
    </style>

    <style name="MainSmallTextView">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/colorIcons</item>
    </style>

    <style name="MainExtraSmallTextView">
        <item name="android:textSize">@dimen/extra_small_text_size</item>
        <item name="android:textColor">@color/colorIcons</item>
    </style>

    <style name="MainButtonOrange">
        <item name="android:textSize">@dimen/middle_text_size</item>
        <item name="android:textColor">@color/colorIcons</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/orange_button_form</item>
    </style>

    <style name="ButtonFacebook">
        <item name="android:textSize">@dimen/extra_small_text_size</item>
        <item name="android:textColor">@color/colorIcons</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/facebook_button_form</item>
    </style>

    <style name="ButtonGoogle">
        <item name="android:textSize">@dimen/extra_small_text_size</item>
        <item name="android:textColor">@color/colorIcons</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/google_button_form</item>
    </style>

    <style name="ButtonTwitter">
        <item name="android:textSize">@dimen/extra_small_text_size</item>
        <item name="android:textColor">@color/colorIcons</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/twitter_button_form</item>
    </style>

    <style name="BodyFitDialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="BodyFitErrorDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorIcons</item>
    </style>

    <style name="InputLayoutErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/colorAccentDark</item>
    </style>

    <style name="InputLayoutHintText" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/colorIcons</item>
    </style>
</resources>
